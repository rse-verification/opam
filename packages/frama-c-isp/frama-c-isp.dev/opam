opam-version: "2.0"
synopsis: "Automatic inference of ACSL auxilliary annotations"
description: """
This plugin for the Frama-C platform for source code analysis
of C programs provides automatic inference of ACSL auxilliary annotations."""
maintainer: ["Gustav Ung"]
authors: ["The ISP development team"]
license: "GPL-2.0-or-later"
homepage:
  "https://github.com/rse-verification/interface-specification-propagator"
bug-reports: "https://github.com/rse-verification/interface-specification-propagator/issues"
depends: [
  "dune" {>= "3.2"}
  "ocaml" {>= "4.14"}
  "frama-c" {>= "26" & < "29"}
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "--promote-install-files=false"
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
  ["dune" "install" "-p" name "--create-install-files" name]
]
dev-repo: "git+https://github.com/rse-verification/interface-specification-propagator.git"

url {
  src: "git+https://github.com/rse-verification/interface-specification-propagator.git#master"
}
